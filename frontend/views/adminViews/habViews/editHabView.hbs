<div class="card col-md-6 mx-auto mt-5">
    <div class="card-header bg-dark">
        <h3 style="color: white;">Editar Habitacion</h3>
    </div>
    <div class="card-body">
        <form action="/admin/updateHabitacion/{{Id_Habitacion}}" method="POST">
            <div class="row mb-3">
                <label for="inpHabi" class="col-sm-3 col-form-label">Habitacion</label>
                <div class="col-sm-9">
                <input type="text" class="form-control" id="inpHabi" name="Habitacion" value="{{Habitacion}}" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Editar</button>
        </form>
    </div>
</div>