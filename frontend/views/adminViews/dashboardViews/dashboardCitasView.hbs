<div class="container-fluid">
    <div class="card col-md-12 mt-5">
        <div class="table-responsive-lg">
            {{>headDashboard cit=true}}
            <div class="card-body">
                <table class="table table-secondary table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id_Cita</th>
                            <th scope="col">Id_Doctor</th>
                            <th scope="col">Id_Paciente</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Descripcion</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each citas}}
                        <tr>
                            <th scope="row">{{Id_Cita}}</th>
                            <th>{{Id_Doctor}}</th>
                            <th>{{Id_Paciente}}</th>
                            <th>{{Fecha}}</th>
                            <th>{{Descripcion}}</th>
                            <th>
                                <form action="/admin/deleteCita/{{Id_Cita}}" method="post"><button
                                        class="btn btn-outline-danger" type="submit">Eliminar</button></form>
                            </th>
                            <th>
                                <form action="/admin/updateCita/{{Id_Cita}}"><button class="btn btn-outline-info"
                                        type="submit">Editar</button></form>
                            </th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>