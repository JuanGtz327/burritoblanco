<div class="container-fluid">
    <div class="card col-md-12 mt-5">
        <div class="table-responsive">
            {{>headDashboard rec=true}}
            <div class="card-body">
                <table class="table table-secondary table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Id_Receta</th>
                            <th scope="col">Id_Cita</th>
                            <th scope="col">Descripcion</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each recetas}}
                        <tr>
                            <th scope="row">{{Id_Receta}}</th>
                            <th>{{Id_Cita}}</th>
                            <th>{{Descripcion}}</th>
                            <th>
                                <form action="/admin/deleteReceta/{{Id_Receta}}" method="post"><button
                                        class="btn btn-outline-danger" type="submit">Eliminar</button></form>
                            </th>
                            <th>
                                <form action="/admin/updateReceta/{{Id_Receta}}"><button class="btn btn-outline-info"
                                        type="submit">Editar</button></form>
                            </th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>