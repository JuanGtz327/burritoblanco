<div class="card col-md-6 mx-auto mt-5">
    <div class="card-header bg-dark">
        <h3 style="color: white;">Agregar Receta</h3>
    </div>
    <div class="card-body">
        {{#if idDoc}}
            <form action="/doctor/addReceta/{{idDoc}}" method="POST">
        {{else}}
            <form action="/admin/addReceta" method="POST">
        {{/if}}
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">IdCita</label>
                <div class="col-sm-9">
                    <select class="form-select" name="idCita">
                        {{#each citas}}
                            <option value="{{Id_Cita}}"> {{Id_Cita}} </option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpCorr" class="col-sm-3 col-form-label">Descripcion</label>
                <div class="col-sm-9">
                    <textarea class="form-control" name="Descripcion" required></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Agregar</button>
        </form>
    </div>
</div>