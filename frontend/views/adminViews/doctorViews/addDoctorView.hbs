<div class="card col-md-6 mx-auto mt-5">
    <div class="card-header  bg-dark">
        <h3 style="color: white;">Agregar Doctor</h3>
    </div>
    <div class="card-body">
        <form action="/admin/addDoctor" method="POST">
            <div class="row mb-3">
                <label for="inpName" class="col-sm-3 col-form-label">Nombre</label>
                <div class="col-sm-9">
                <input type="text" class="form-control" id="inpName" name="Nombre">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpAppeP" class="col-sm-3 col-form-label">Apellido 1</label>
                <div class="col-sm-9">
                <input type="text" class="form-control" id="inpAppeP" name="ApellidoP">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpAppeM" class="col-sm-3 col-form-label">Apellido 2</label>
                <div class="col-sm-9">
                <input type="text" class="form-control" id="inpAppeM" name="ApellidoM">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpEsp" class="col-sm-3 col-form-label">Especialidad</label>
                <div class="col-sm-9">
                <input type="text" class="form-control" id="inpEsp" name="Especialidad">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpCons" class="col-sm-3 col-form-label">Consultorio</label>
                <div class="col-sm-9">
                <input type="number" class="form-control" id="inpCons" name="Consultorio">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inpCorr" class="col-sm-3 col-form-label">Correo</label>
                <div class="col-sm-9">
                <input type="email" class="form-control" id="inpCorr" name="Correo">
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;">Agregar</button>
        </form>
    </div>
</div>